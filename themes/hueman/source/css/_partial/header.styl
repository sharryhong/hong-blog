#header
    background: color-header-background
    padding-bottom: nav-height
    position: relative

#header-outer
    height: 100%
    position: relative

#header-inner
    position: relative

#header-title
    clearfix()
    text-align: center
    padding: 30px 30px
    .logo-wrap, .subtitle-wrap
        float: left
    .subtitle-wrap
        padding-top: 15px
        margin-left: 0px
    .subtitle
        font-family: 'Indie Flower', cursive;
        font-size: 1.25rem
        font-style: italic
        line-height: logo-height + 10
        color: color-nav-foreground
        text-shadow: 0 1px rgba(0, 0, 0, 0.2)
    .logo
        font-family: 'Indie Flower', cursive;
        color: #fff
        font-weight: bold
        font-size: 3rem
        text-align: left
        text-decoration: none
        background: url('images/snoopy.png') 135px no-repeat